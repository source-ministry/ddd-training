{% extends "::base.html.twig" %}

{% block body -%}
    <h3><i class="glyphicon glyphicon-book"></i> Book list</h3>

    <hr>

    <div class="row">
        <!-- center left-->
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('bookcopy_show', { 'id': entity.id }) }}">{{ entity.edition.name }}</a>
                        </td>
                        <td>{% if entity.available %}Available{% else %}Lent by {{ entity.reader.fullName }}{% endif %}</td>
                        <td>
                            <a href="{{ path('bookcopy_edit', {'id':entity.id}) }}">
                                <i class="glyphicon glyphicon-edit"></i> Edit
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
        <div class="col-md-12">
            <a href="{{ path('bookcopy_new') }}" class="btn btn-default">
                <i class="glyphicon glyphicon-plus"></i> Add New
            </a>
        </div>
    </div>
{% endblock %}
