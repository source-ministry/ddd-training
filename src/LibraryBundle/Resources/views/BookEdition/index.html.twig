{% extends "::base.html.twig" %}

{% block body -%}
    <h3><i class="glyphicon glyphicon-registration-mark"></i> Editions registry</h3>

    <hr>

    <div class="row">
        <!-- center left-->
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Author</th>
                    <th>Release Date</th>
                    <th>Pages</th>
                    <th>Copies</th>
                    <th>Available copies</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('bookedition_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                        <td>{{ entity.author }}</td>
                        <td>{{ entity.releaseDate.format("Y-m-d") }}</td>
                        <td>{{ entity.numberOfPages }}</td>
                        <td>{{ entity.numberOfCopies }}</td>
                        <td>{{ entity.numberOfAvailableCopies }}</td>
                        <td>
                            <a href="{{ path('bookedition_edit', {'id':entity.id}) }}">
                                <i class="glyphicon glyphicon-edit"></i> Edit
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
        <div class="col-md-12">
            <a href="{{ path('bookedition_new') }}" class="btn btn-default">
                <i class="glyphicon glyphicon-plus"></i> Add New Edition
            </a>
        </div>
    </div>
{% endblock %}
