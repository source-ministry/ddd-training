{% extends "::base.html.twig" %}

{% block body -%}
    <h3><i class="glyphicon glyphicon-user"></i> Reader Details</h3>

    <hr>

    <div class="row">
        <!-- center left-->
        <div class="col-md-12">
            <table class="table table-striped">
                <tbody>            <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Surname</th>
                    <td>{{ entity.surname }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ entity.email }}</td>
                </tr>
                <tr>
                    <th>Enabled</th>
                    <td>{{ entity.enabled }}</td>
                </tr>
                <tr>
                    <th>Addressfirstline</th>
                    <td>{{ entity.addressFirstLine }}</td>
                </tr>
                <tr>
                    <th>Addresssecondline</th>
                    <td>{{ entity.addressSecondLine }}</td>
                </tr>
                <tr>
                    <th>Postcode</th>
                    <td>{{ entity.postcode }}</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>{{ entity.city }}</td>
                </tr>
                <tr>
                    <th>Books</th>
                    <td>

                        <div class="list-group">
                            {% for copy in entity.books %}
                                <a href="{{ path("bookcopy_edit", { 'id': copy.id }) }}"
                                   class="list-group-item">{{ copy.edition.name }}</a>
                            {% else %}
                                <span>No copies</span>
                            {% endfor %}
                        </div>

                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
